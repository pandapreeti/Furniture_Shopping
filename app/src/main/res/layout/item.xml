<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D3C866"
    android:orientation="vertical"
    android:weightSum="1">


    <ImageView
        android:id="@+id/ITEM_IMAGE"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"

        android:layout_marginTop="20dp" />

    <!-- ListView for displaying different stores with its price -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="510dp"
        android:background="#D3C866"
        android:orientation="vertical">

        <TextView
            android:id="@+id/ITEM_NAME"
            android:layout_width="347dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:background="#D3C866"

            android:text="Product Name: "
            android:textColor="#000000"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/category"
            android:layout_width="347dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"

            android:layout_marginTop="5dp"
            android:background="#D3C866"

            android:text="Category"
            android:textColor="#000000"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/rating"
            android:layout_width="347dp"
            android:layout_height="29dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:background="#D3C866"
            android:text="Cost"
            android:textColor="#000000"
            android:textStyle="bold"


            />

        <TextView
            android:id="@+id/discnt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:background="#D3C866"
            android:text="Discount."
            android:textColor="#000000"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/cno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:background="#D3C866"
            android:text="Description"
            android:textColor="#000000"
            android:textStyle="bold"


            />

        <TextView
            android:id="@+id/qtyy"
            android:layout_width="351dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:background="#D3C866"

            android:text="Select Qty"
            android:textColor="#000000"
            android:textStyle="bold"
            />

        <Spinner
          android:id="@+id/SELECT_PIECE"
          android:layout_width="100dp"
          android:layout_height="50dp"
          android:layout_gravity="center"
          android:layout_marginLeft="10dp"
          android:layout_marginTop="5dp"
          android:background="@android:drawable/btn_dropdown"
          android:backgroundTint="#F4EBEB" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
          android:id="@+id/fab"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="10dp"
          android:layout_gravity="center"
          android:layout_marginLeft="@dimen/fab_margin"
          android:layout_marginRight="@dimen/fab_margin"
          android:src="@drawable/addcart"
          app:backgroundTint="#c7362c" />
    </LinearLayout>


</LinearLayout>